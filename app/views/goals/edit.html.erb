<div class="login-back">
<%= error_messages_for(@goal) %>
	<div class="login-box">
	<div class="loginPanel">
	<%= form_for(:goal, :url => {:action => 'update', :id => @goal.id, :user_id => @user.id}) do |f| %>
		<table  summary="Subject form fields">
			<tr>
				<th>Title</th>
				<td><%= f.text_field(:title) %></td>
			</tr>
			<tr>
				<th>Description</th>
				<td><%= f.text_area(:description) %></td>
			</tr>
			<tr>
				<th>Start Date</th>
				<td><%= f.date_select(:start_date) %></td>
			</tr>
			<tr>
				<th>End Date</th>
				<td><%= f.date_select(:end_date) %></td>
			</tr>
		</table>

		<div class="form-buttons">
			<%= submit_tag("Update Goal") %>
		</div>

	<% end %>
	</div>
	</div>
</div>